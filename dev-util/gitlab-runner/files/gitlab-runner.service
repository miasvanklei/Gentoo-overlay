[Unit]
Description=GitLab Runner
After=syslog.target network.target
ConditionFileIsExecutable=/usr/bin/gitlab-runner

[Service]
StartLimitInterval=5
StartLimitBurst=10
EnvironmentFile=-/etc/gitlab-runner/config.env
ExecStart=/usr/bin/gitlab-runner run --working-directory /var/lib/gitlab-runner --config /etc/gitlab-runner/config.toml --service gitlab-runner
Restart=always
RestartSec=120
SyslogIdentifier=gitlab-runner

[Install]
WantedBy=default.target
